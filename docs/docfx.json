{
	"metadata": [
		{
			"src": [
				{
					"src": "..",
					"files": [
						"OpenMEP/**.csproj",
						"OpenMEPSandbox/**.csproj"
					]
				}
			],
			"dest": "api",
			"includePrivateMembers": false,
			"disableGitFeatures": false,
			"disableDefaultFilter": false,
			"namespaceLayout": "flattened"
		}
	],
	"build": {
		"content": [
			{
				"files": [
					"api/**.yml",
					"api/**",
					"api/index.md"
				]
			},
			{
				"files": [
					"articles/**.md",
					"articles/**/toc.yml",
					"toc.yml",
					"*.md"
				]
			}
		],
		"resource": [
			{
				"files": [
					"images/**",
					"articles/**.png",
					"articles/**.jpg",
					"OpenMEPPage/**"
				]
			}
		],
		"overwrite": [
			{
				"files": [
					"apidoc/**.md"
				],
				"exclude": [
					"obj/**",
					"_site/**"
				]
			}
		],
		"dest": "_site",
		"globalMetadataFiles": [],
		"fileMetadataFiles": [],
		"xrefService": [ "https://xref.docs.microsoft.com/query?uid={uid}" ],
		"template": [
			"default",
			"modern"
		],
		"postProcessors": ["ExtractSearchIndex"],
		"noLangKeyword": false,
		"keepFileLink": false,
		"disableGitFeatures": false,
		"globalMetadata": {
			"_appTitle": "Open MEP",
			"_appLogoPath": "images/logo.png",
			"_enableSearch": true,
			"_enableNewTab": false,
			"_gitContribute": {
			  "repo": "https://github.com/chuongmep/openmep",
			  "branch": "dev"
			}
		}
	}
}